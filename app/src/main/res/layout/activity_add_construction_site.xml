<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">


        <TextView
            android:id="@+id/NameTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@string/name_title"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"/>

        <PlainText
            android:id="@+id/NameData"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="TextView"
            android:textSize="14sp"/>

    <TextView
        android:id="@+id/CityTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/city_title"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"/>

    <PlainText
        android:id="@+id/CityData"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="TextView"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/AdressTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/adress_title"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"/>

    <PlainText
        android:id="@+id/AdressData"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="TextView"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/OverseerTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/overseer_title"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"/>

    <PlainText
        android:id="@+id/OverseerData"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="TextView"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/PictureTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/image_title"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"/>



        <Button
            android:id="@+id/AddSite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/add_site"
            android:textSize="14sp" />
    </LinearLayout>